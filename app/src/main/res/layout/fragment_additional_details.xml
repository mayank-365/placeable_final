<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".additional_details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/additional_uploadphototext"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_ui_mediam"
                android:textSize="25dp"
                android:textColor="@color/light_grey"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                android:id="@+id/additional_edit_photo_text"
                android:layout_width="250dp"
                android:hint="@string/additonal_Location_image"
                android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                android:background="@drawable/input"/>
                />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:text="@string/additional_addphoto"/>
            </LinearLayout>
            <View
                android:id="@+id/additional_line"
                style="@style/Divider"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/additional_uploadresumetext"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_ui_mediam"
                    android:textSize="25dp"
                    android:textColor="@color/light_grey"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/additional_edit_resume_text"
                        android:layout_width="250dp"
                        android:hint="@string/additonal_Location_resume"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/input"
                        />
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:textColor="@color/white"
                        android:text="@string/additional_addphoto"/>
                </LinearLayout>
                <View
                    android:id="@+id/additional_line3"
                    style="@style/Divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/additional_addproject"
                    android:fontFamily="@font/sf_ui_mediam"
                    android:textSize="25dp"
                    android:textColor="@color/light_grey"
                    android:layout_marginTop="20dp"/>
                    <EditText
                        android:id="@+id/additional_edit_project_title_text"
                        android:layout_width="350dp"
                        android:hint="@string/additonal_projecttitle"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:layout_marginTop="10dp"
                        />
                <EditText
                    android:textSize="22sp"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/sf_ui_light"
                    android:background="@drawable/roundcorners"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:gravity="top|left"
                    android:hint="@string/feeback_des"
                    android:layout_marginTop="10dp"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    >
                    <Button
                        android:id="@id/additional_backbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:text="@string/additional_cancel"
                        android:fontFamily="@font/sf_ui_bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="10dp"
                        />
                    <Button
                        android:id="@+id/additional_backbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:text="@string/additional_next"
                        android:fontFamily="@font/sf_ui_bold"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</FrameLayout>