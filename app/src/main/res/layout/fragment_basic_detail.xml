<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".basic_detail"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
        <EditText
            android:id="@+id/basic_details_name"
            android:layout_width="350dp"
            android:hint="@string/basicdetails_name"
            android:layout_height="wrap_content"
            android:background="@drawable/input"

            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <!--start here!-->
                <Spinner android:id="@+id/Gender_dropdown"
                    android:layout_width="170dp"
                    android:background="@drawable/input"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/Basic_details_dob"
                    android:layout_height="wrap_content"
                    android:layout_width="170dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/input"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/basicdetails_dob"/>
            </LinearLayout>
            <EditText
                android:id="@+id/basic_details_collageemail"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:hint="@string/basicdetails_Collageaddress"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/basic_details_regno"
                android:layout_width="350dp"
                android:hint="@string/basicdetails_regno"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/basic_details_phno"
                android:layout_width="350dp"
                android:hint="@string/basicdetails_phno"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input"
                    android:hint="@string/basicdetails_category"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/basicdetails_pwd"
                    android:background="@drawable/input"/>
            </LinearLayout>
            <EditText
                android:id="@+id/basic_details_course"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:layout_marginTop="10dp"
                android:hint="@string/basicdetails_course"/>
            <EditText
                android:id="@+id/basic_details_branch"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="@string/basicdetails_branch"
                android:background="@drawable/input"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/basic_details_gaurdian"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="@string/basicdetails_gaurdian"
                android:background="@drawable/input"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/basic_details_permanentaddress"
                android:hint="@string/basicdetails_permanentaddress"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/basic_details_presentaddress"
                android:hint="@string/basicdetails_presentaddress"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/basic_details_state"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input"
                    android:hint="@string/basicdetails_state"
                    android:layout_marginRight="10dp"/>

                <EditText
                    android:id="@+id/basic_details_country"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input"
                    android:hint="@string/basicdetails_country"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="@string/basicdetails_cancel"
                    android:fontFamily="@font/sf_ui_bold"
                    android:textColor="@color/white"
                    android:layout_marginRight="100dp"
                    />
                <Button
                    android:id="@+id/basic_details_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="@string/basicdetails_next"
                    android:fontFamily="@font/sf_ui_bold"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</ScrollView>