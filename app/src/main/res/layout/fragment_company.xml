<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".company">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/cardviewcompany1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/companybuttons"
                android:layout_height="wrap_content"
                android:background="@color/light_orange">
                <Button
                    android:id="@+id/registered_comp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/dark_orange"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="Registered"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/open_companies"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/dark_orange"
                    android:gravity="center"
                    android:text="New Openings"
                    android:textColor="@color/white" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/companyframe"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_below="@+id/companybuttons" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>