<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudentFeedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/prev_feedbacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_orange"
                        android:fontFamily="@font/sf_ui_bold"
                        android:gravity="center"
                        android:text="@string/write_feed"
                        android:textColor="@color/white"
                        android:textSize="25dp" />
                    <EditText
                        android:layout_margin="5dp"
                        android:textSize="22sp"
                        android:background="@color/nav_text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Title"
                        android:textColor="@color/light_grey"
                        android:fontFamily="@font/sf_ui_light"
                        />
                    <EditText
                        android:layout_margin="5dp"
                        android:textSize="22sp"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/sf_ui_light"
                        android:background="@color/nav_text_color"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:hint="@string/feeback_des"
                        android:gravity="top|left"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CANCEl"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/button"
                        android:textColor="@color/white"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT"
                        android:textColor="@color/white"
                        android:background="@drawable/button"/>

                </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>